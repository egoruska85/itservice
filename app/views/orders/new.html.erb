<%= render '/orders/navbar' %>
<div class="container">
  <center><h1 class="">Ваша заявка</h1></center>

    <%= form_for :order, url: orders_path do |f| %>
      <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="background: white;">
        <%= f.label "Ваша предполагаемая услуга" %>
        <br><br>
        <%= f.select :service_id, options_for_select(@services.collect{ |service| [service.name, service.id] }), {}, {class: "form-control"} %>
      </div>

        <div class="row">
          <div class="col-sm-12 col-lg-6">
            <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="background: white;">
              <%= f.label "Опишите вашу проблему" %>
              <br><br>
              <%= f.text_area :defect, class:"form-control", rows:"6" %>
            </div>
          </div>
          <div class="col-sm-12 col-lg-6">
            <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="background: white; height: 240px;">
              <%= f.label "Укажите ваш телефон" %>
              <br><br>
              <%= f.text_field :phone, value: current_user.phone, class:"form-control" %>
<hr>
              <%= f.label "Укажите ваш адрес" %>
              <br>
              <%= f.text_area :address, value: current_user.address, class:"form-control" %>
            </div>
          </div>
        </div>
        <center>
          <div class="shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="background: white; width: 350px;">
            <%= f.label "Можете прикрепить картинки проблемы" %>
            <br><br>
            <%= f.file_field :images, multiple: true, class:'form-control' %>
          </div>
          <%= f.submit 'Отправить заявку', class:"btn btn-success" %>

        </center>





    <% end %>

</div>
<br><br><br>
